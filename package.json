{
  "name": "cooperation-center",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:css": "node ./node_modules/tailwindcss/lib/cli.js -i ./src/main/resources/static/js/css/input.css -o ./src/main/resources/static/js/css/output.css --minify",
    "watch:css": "node ./node_modules/tailwindcss/lib/cli.js -i ./src/main/resources/static/js/css/input.css -o ./src/main/resources/static/js/css/output.css --watch",
    "clean:css": "del ./src/main/resources/static/js/css/output.css",
    "test": "jest",
    "build:js": "rollup -c",
    "build": "npm-run-all --parallel build:js build:css",
    "watch": "npm-run-all --parallel watch:js watch:css"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "rollup": "^4.18.0",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@hotwired/turbo": "^8.0.4"
  }
}
